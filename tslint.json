{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        "tslint-react"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "arrow-parens": true,
        "typedef": [
            true,
            "array-destructuring",
            "arrow-call-signature",
            "arrow-parameter",
            "call-signature",
            "member-variable-declaration",
            "object-destructuring",
            "parameter",
            "property-declaration"
        ]
    },
    "rulesDirectory": []
}
